 <% if user_signed_in? %>

 <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Telegram</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td>
            <%=  friend.first_name + ' ' + friend.last_name%>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.telegram %></td>
          <td>
            <%= button_to "Delete", friend, method: :delete,
            date: { confirm: 'Are you sure?'} ,class:"btn btn-outline-danger btn-sm"%>
          </td>
          <td>
            <%= link_to 'Show', friend, class: "btn btn-outline-dark btn-sm" %>
          </td>
          <td>
            <%= link_to "Edit", edit_friend_path(friend),  class:"btn btn-outline-dark btn-sm"%>
          </td>  
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Add', new_friend_path, class:"btn btn-outline-dark"%>
<% else %>
  <h1>Hello.... opss</h1>   
<% end %>