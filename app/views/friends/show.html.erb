  
<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name + " " + @friend.last_name%></h1>
  <hr class="my-4">
  <p class="lead"><%= @friend.email %>  |  <%=@friend.phone%> | <%=@friend.telegram%></p>

 
  <div class="container">
    <div class="row row-cols-auto">
      <div class="col">
          <%= link_to "Back", friends_path, class:"btn btn-outline-dark" %>
      </div>
      <div class="col">
        <%= link_to "Edit", edit_friend_path(@friend),  class:"btn btn-outline-dark"%>
      </div>
      <div class="col">
        <%= button_to "Destroy", @friend, method: :delete, class:"btn btn-outline-danger"%>
      </div>
    </div>
  </div>

</div>


